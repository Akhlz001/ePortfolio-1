@model ePortfolio.Models.Skill

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Skill No @Model.SkillNo</h2>

<h4>Skill Details</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">

            <input type="hidden" data-val="true"
                   data-val-required="The ID field is required."
                   id="SkillID" name="SkillID" value="@Model.SkillID" />

            <partial name="_SkillForm.cshtml" for="@Model" />

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Evidence" class="control-label"></label>
                <textarea asp-for="Evidence" class="form-control"></textarea>
                <span asp-validation-for="Evidence" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
